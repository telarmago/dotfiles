{
    // General
    "editor.fontFamily": "SF Mono",
    "editor.fontLigatures": true,
    "editor.fontSize": 14,
    "terminal.integrated.fontSize": 14,
    "editor.rulers": [80],
    "files.associations": {
        "*.txt": "markdown",
    },
    "editor.multiCursorModifier": "ctrlCmd",
    "window.newWindowDimensions": "inherit",
    "window.confirmBeforeClose": "always",
    "files.trimTrailingWhitespace": true,
    "editor.formatOnPaste": true,
    "extensions.ignoreRecommendations": true,
    "zenMode.fullScreen": false,
    "diffEditor.renderSideBySide": true

    // Layout
    "window.commandCenter": false,
    "workbench.layoutControl.enabled": false,
    "workbench.activityBar.location": "top",
    "chat.commandCenter.enabled": false,

    // Debug
    "debug.toolBarLocation": "docked",
    "debug.console.fontSize": 14,

    // Theme
    "editor.minimap.renderCharacters": false,
    "editor.minimap.showSlider": "always",
    "workbench.colorTheme": "Material Theme Darker High Contrast",

    // Other
    "workbench.editor.enablePreview": true,
    "workbench.editor.wrapTabs": true,
    "workbench.editor.tabSizing": "fixed",
    "workbench.editor.tabSizingFixedMinWidth": 195,
    "workbench.editor.tabSizingFixedMaxWidth": 195,
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.commandsToSkipShell": [
        "-workbench.action.quickOpenView"
    ],
    "terminal.integrated.macOptionIsMeta": true,
    "editor.guides.bracketPairs": "active",
    "editor.lightbulb.enabled": "off",
    "editor.accessibilitySupport": "off",

    // Meta
    "bento.openHackNotebookWithDebugger": false,
    "biggrep.hideUninteresting.enabled": true,

    // Devmate
    "accessibility.openChatEditedFiles": false,
    "devmate.inline.assertiveness.enable-inline-buttons-highlighted-text": false,
    "devmate.sidebar.extendedThinkingEnabled": true,
    "devmate.sidebar.interleavedThinkingEnabled": true,
    "devmate.sidebar.defaultModel": "GPT-5 Codex",
    "devmate.sidebar.gpt5.reasoningEffort": "HIGH",
}
